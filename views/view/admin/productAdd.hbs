
<div class="add-wrapper-from">
    <a href="/product" class="add-wrapper__button-close btn"><i class="fas fa-times"></i></a>
    <div class="form-allert"></div>
    <div class="form-button__wrapper">
        <div class="form-button__item form-button__item-active">Общие</div>
        <div class="form-button__item">Данные</div>
        <div class="form-button__item">Связи</div>
        <div class="form-button__item">Атрибуты</div>
        <div class="form-button__item">Опции</div>
        <div class="form-button__item">Акции</div>
        <div class="form-button__item">Подарки</div>
        <div class="form-button__item">Изображения</div>
    </div>
    <form id="add-product">
                <div class="form-tabs form-tabs__active">
                    <div class="group">      
                        <input type="text" name="name" required>
                        <span class="bar"></span>
                        <label>Название товара</label>
                    </div>
                    <div class="group">      
                        <input type="text" name="htmltag">
                        <span class="bar"></span>
                        <label>HTML - тег H1</label>
                    </div>
                    <div class="group">      
                        <input type="text" name="metatitle">
                        <span class="bar"></span>
                        <label>Meta - тег Title</label>
                    </div>
                    <div class="group">      
                        <input type="text" name="metadesc">
                        <span class="bar"></span>
                        <label>Meta - тег Description</label>
                    </div> 
                    <div class="group">
                        <span class="textarea-desc">Описание товара</span>
                        <textarea name="desc" cols="30" id="product-description" rows="10"></textarea>
                    </div>  
                </div>
                <div class="form-tabs">
                    <div class="group">      
                        <input type="text" name="seourl">
                        <span class="bar"></span>
                        <label>SEO url</label>
                    </div>
                    <div class="group">      
                        <input type="text" name="model" >
                        <span class="bar"></span>
                        <label>Модель</label>
                    </div>
                    <div class="group">      
                        <input type="text" name="code">
                        <span class="bar"></span>
                        <label>Код товара</label>
                    </div>
                    <div class="group">      
                        <input type="number" name="pricein">
                        <span class="bar"></span>
                        <label>Цена в валюте</label>
                    </div>
                    <div class="group">      
                        <input type="number" name="price">
                        <span class="bar"></span>
                        <label>Цена</label>
                    </div>
                    <div class="group">      
                        <input type="number" name="count">
                        <span class="bar"></span>
                        <label>Количество на складе</label>
                    </div>
                    <div class="group">      
                        <select name="availability">
                            <option value="in" selected >В наличии</option>
                            <option value="out">Нет в наличии</option>
                        </select>
                        <label>Наличие</label>
                    </div>
                </div>
                <div class="form-tabs">
                    <div class="group">      
                        <input type="text" name="manufacturer">
                        <span class="bar"></span>
                        <label>Производитель</label>
                    </div>
                    <div class="group">      
                        <select name="availability">
                            <option value="categoryId">Категория 1</option>
                            <option value="categoryId">Категория > Категория 2</option>
                        </select>
                        <label>Главная категория</label>
                    </div>
                </div>
                <div class="form-tabs">
                    <div class="attribute-head">
                        <div class="attribute-name">Характеристики</div>
                        <div class="attribute-text">Текст</div>
                        <div class="btn-attr__add btn"><i class="fas fa-plus" aria-hidden="true"></i></div>
                    </div>
                </div>
                <div class="form-tabs">
                    <span>Опции</span>
                </div>
                <div class="form-tabs">
                    <span>Акции</span>
                </div>
                <div class="form-tabs">
                    <span>Подарки</span>
                </div>
                <div class="form-tabs">
                    <div class="img-wrapper">
                        <img src="../admin/img/product_no_image.jpg" alt="" class="product-image">
                        <input type="text" name="img_src" class="hidden" value="">
                        <div class="main-img__btn btn">+</div>
                    </div>
                </div>
                <button type="submit" class="btn btn-form-save"><i class="fas fa-save"></i></button>
    </form>
    <div class="add-image hidden">
        <div class="image-colection">
            {{#each file}}
                <div class="image-colection__item">
                    <img src="/uploads/{{this}}" width="80" height="80" alt="file">
                    <div class="span">{{this}}</div>
                </div>
            {{/each}}
        </div>
        <div class="add-image__close btn"><i class="fas fa-times" aria-hidden="true"></i></div>
        <form id="add-product__image">
            <input type="file" name="image"/>
            <button type="submit" class="btn btn-add__img">Добавить</button>
        </form>
    </div>
</div>
<script src="/admin/js/product.js"></script>
{{!-- Main page admin interface --}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/admin/css/main.css">
    <title>exCart Admin Panel</title>
</head>
<body>
    <div class="admin-panel">
        <div class="admin-panel__sitebar">
            <div class="admin-panel__sitebar-title">exCart</div>
            <div class="admin-panel__item-title">
                <a class="item-title" href="/dashboard"><i class="fas fa-chart-pie"></i>Панель</a>
            </div>
            <div class="admin-panel__item">
                <div class="admin-panel__item-title">
                    <span class="item-title"><i class="fas fa-server"></i>Каталог</span>
                    <span class="admin-panel__dropdown-icon"><i class="fas fa-chevron-down"></i></span>
                </div>
                <div class="admin-panel__dropdown">
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/category?route=catalog/category">Категории</a>
                    </div>
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/product?route=catalog/product">Товар</a>
                    </div>
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/attribute?route=catalog/attribute">Характеристики</a>
                    </div>
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/option?route=catalog/option">Опции</a>
                    </div>
                </div>
            </div>
            <div class="admin-panel__item">
                <div class="admin-panel__item-title">
                    <span class="item-title"><i class="fas fa-desktop"></i>Дизайн</span>
                    <span class="admin-panel__dropdown-icon"><i class="fas fa-chevron-down"></i></span>
                </div>
                <div class="admin-panel__dropdown">
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/head?route=catalog/head">Шапка</a>
                    </div>
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/menu?route=catalog/menu">Меню</a>
                    </div>
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/content?route=catalog/content">Контент</a>
                    </div>
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/footer/?route=catalog/footer">Футер</a>
                    </div>
                </div>
            </div>
            <div class="admin-panel__item">
                <div class="admin-panel__item-title">
                    <span class="item-title"><i class="fas fa-shopping-cart"></i>Продажи</span>
                    <span class="admin-panel__dropdown-icon"><i class="fas fa-chevron-down"></i></span>
                </div>
                <div class="admin-panel__dropdown">
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/order?route=catalog/order">Заказы</a>
                    </div>
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/analitic/?route=catalog/analitic">Отчет</a>
                    </div>
                </div>
            </div>
            <div class="admin-panel__item">
                <div class="admin-panel__item-title">
                    <span class="item-title"><i class="fas fa-poll-h"></i>Маркетинг</span>
                    <span class="admin-panel__dropdown-icon"><i class="fas fa-chevron-down"></i></span>
                </div>
                <div class="admin-panel__dropdown">
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/google?route=catalog/google">Google</a>
                    </div>
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/facebook?route=catalog/facebook">Facebook</a>
                    </div>
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/instagram?route=catalog/instagram">Instagram</a>
                    </div>
                </div>
            </div>
            <div class="admin-panel__item">
                <div class="admin-panel__item-title">
                    <span class="item-title"><i class="fas fa-cog"></i>Система</span>
                    <span class="admin-panel__dropdown-icon"><i class="fas fa-chevron-down"></i></span>
                </div>
                <div class="admin-panel__dropdown">
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/setting?route=catalog/setting">Настройки</a>
                    </div>
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/shop?route=catalog/shop">Магазин</a>
                    </div>
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/currency?route=catalog/currency">Валюта</a>
                    </div>
                </div>
            </div>
            <div class="admin-panel__item">
                <div class="admin-panel__item-title">
                    <span class="item-title"><i class="fas fa-map"></i>Карты</span>
                    <span class="admin-panel__dropdown-icon"><i class="fas fa-chevron-down"></i></span>
                </div>
                <div class="admin-panel__dropdown">
                    <div class="dropdown-item">
                        <i class="fas fa-ellipsis-h"></i>
                        <a href="/maps?route=catalog/maps">Google maps</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="admin-panel__content">
            <div class="admin-panel__content-header">
                <div class="panel__header-massage panel__header-margin">
                    <div class="header-icon">
                        <i class="fas fa-bell" style="color: #5DC1AE;"></i>
                        <span class="new-active"><i class="fas fa-circle"></i></span>
                    </div>
                    <div class="header-massage__wrapper"></div>
                </div>
                <div class="panel__header-callback panel__header-margin">
                    <div class="header-icon">
                        <i class="fas fa-sms" style="color: #F6CA01;"></i>
                        <span class="new-active"><i class="fas fa-circle"></i></span>
                    </div>
                    <div class="header-callback__wrapper"></div>
                </div>
                <div class="panel__header-login panel__header-margin">
                    <a class="header-icon" href="/" target="_blank"><i class="fas fa-store" style="color: #F77A17;"></i></a>
                </div>
                <div class="panel__header-login panel__header-margin">
                    <div class="header-icon"><i class="fas fa-user" style="color: #67A97E;"></i></div>
                    <div class="header-login__wrapper"></div>
                </div>
                <div class="panel__header-login panel__header-margin">
                    <a class="header-icon" style="text-decoration: none; color: #E14C42;" href="/logout" target="_blank"><i class="fas fa-sign-out-alt"></i></a>
                </div>
            </div>
            <div class="admin-panel__content-wrapper">
                {{{ body }}}
            </div>
        </div>
    </div>
    <link rel="stylesheet" href="/admin/css/product.css">
    <script src="/admin/js/main.js"></script>
    <script src="https://kit.fontawesome.com/97e5db9e95.js" crossorigin="anonymous"></script>
    <script src="https://cdn.tiny.cloud/1/vazkbwydw7z4vfabztr5zpgpsm4xm1l0vqdctbm206x92ruq/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
        selector: '#product-description',
        plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
        toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
        toolbar_mode: 'floating',
        tinycomments_mode: 'embedded',
        tinycomments_author: 'Author name',
    });
    </script>
</body>
</html>